{
  "name": "momentvoid",
  "version": "0.1.0",
  "description": "Simple countdown tracker in an SPA",
  "main": "countdown.js",
  "scripts": {
    "copy-dependencies": "mkdir -p output/ && cp index.html output/ && cp countdown.css output/ && cp node_modules/js-confetti/dist/js-confetti.browser.js output/",
    "clean": "rm -rf ./output",
    "compile": "tsc",
    "build": "tsc",
    "postbuild": "npm run copy-dependencies",
    "watch-dependencies": "npm-watch copy-dependencies",
    "watch-compile": "tsc --watch",
    "watch-all": "npm-watch",
    "serve-reload": "browser-sync start --server output --watch --no-ui --listen localhost --no-online --no-open --reload-debounce 250"
  },
  "watch": {
    "copy-dependencies": {
      "patterns": [
        "."
      ],
      "ignore": [
        ".vscode",
        "node_modules",
        "output",
        "*.ts"
      ],
      "extensions": "js,css,html"
    },
    "compile": {
      "patterns": [
        "."
      ],
      "ignore": [
        ".vscode",
        "node_modules",
        "output"
      ],
      "extensions": "ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grork/momentvoid.git",
    "directory": "web"
  },
  "keywords": [
    "countdown",
    "typescript",
    "javascript"
  ],
  "author": "Dominic Hopton",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grork/momentvoid/issues"
  },
  "homepage": "https://github.com/grork/momentvoid#readme",
  "devDependencies": {
    "browser-sync": "^2.27.9",
    "js-confetti": "^0.10.2",
    "npm-watch": "^0.11.0",
    "typescript": "^4.4.4"
  }
}